{
  "name": "brosh",
  "version": "0.1.1",
  "description": "Terminal MCP bridge for AI-powered development",
  "author": "Ellery Familia",
  "repository": {
    "type": "git",
    "url": "https://github.com/elleryfamilia/brosh.git"
  },
  "bugs": {
    "url": "https://github.com/elleryfamilia/brosh/issues"
  },
  "homepage": "https://github.com/elleryfamilia/brosh#readme",
  "type": "module",
  "main": "dist/lib.js",
  "bin": {
    "brosh": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    },
    "./cli": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "prepare": "npm run build",
    "prepack": "mv README.md README.github.md && cp README.npm.md README.md",
    "postpack": "mv README.github.md README.md"
  },
  "dependencies": {
    "@anthropic-ai/sandbox-runtime": "^0.0.32",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@xterm/headless": "^5.3.0",
    "ink": "^5.0.1",
    "node-pty": "^1.2.0-beta.8",
    "react": "^18.3.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.12",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "terminal",
    "pty",
    "xterm",
    "ai",
    "claude",
    "brosh"
  ],
  "license": "MIT"
}
